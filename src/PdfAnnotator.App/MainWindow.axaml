<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="using:PdfAnnotator.App.ViewModels"
        xmlns:views="clr-namespace:PdfAnnotator.App.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="PdfAnnotator.App.MainWindow"
        x:DataType="viewmodels:MainWindowViewModel"
        Title="PDF Extract → Table → Annotate">
    <TabControl SelectedIndex="{Binding ModeIndex}">
        <TabItem Header="Извлечение">
            <views:ExtractionView DataContext="{Binding Extraction}"/>
        </TabItem>
        <TabItem Header="Таблица">
            <views:TableView DataContext="{Binding Table}"/>
        </TabItem>
        <TabItem Header="Аннотирование">
            <views:AnnotationView DataContext="{Binding Annotation}"/>
        </TabItem>
    </TabControl>
</Window>

